<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guess_Number" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:textColor">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/onTertiary</item>
        <!-- Container brand color. -->
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/surfaceDim</item>
        <item name="colorSurfaceDim">@color/surfaceDim</item>
        <item name="colorSurfaceContainer">@color/surface.Container</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/surfaceDim</item>
        <!-- Customize your theme here. -->
        <!-- Font. -->
        <item name="fontFamily">@font/nunito_medium</item>
    </style>
    <style name="MyEditTextTheme" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/tertiary</item>
        <item name="android:textColorHighlight">@color/tertiary</item>
        <item name="android:shadowColor">@color/secondaryContainer</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:background">@color/surface.Container</item>
    </style>
</resources>